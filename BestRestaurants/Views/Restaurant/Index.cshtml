@using BestRestaurants.Models;

<h1>Restaurants</h1>

@if (Model.Count == 0)
{
    <h3>There is currently no restaurants in your list</h3>
}

<ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>
            @Html.ActionLink($"{restaurant.RestaurantName}", "Details", new { id =
    restaurant.RestaurantId})
      </li>
    }
</ul>
<p>@Html.ActionLink("Add another restaurant", "Create")</p>


