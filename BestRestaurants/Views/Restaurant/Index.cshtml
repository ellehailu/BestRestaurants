@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (Model.Count == 0)
{
    <h3>There is currently no restaurants in your list</h3>
}

<ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>
            @Html.ActionLink($"{restaurant.Name}", "Details", new { id =
    restaurant.RestaurantId}) | @restaurant.Cuisine.Name
      </li>
    }
</ul>
<p>@Html.ActionLink("Add another restaurant", "Create")</p>

<p>@Html.ActionLink("Go Back to Home", "Index", "Home")</p>
