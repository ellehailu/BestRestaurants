@using BestRestaurants.Models;

<h1>Cuisine</h1>

@if (Model.Count == 0)
{
    <h3>There are no cuisines listed</h3>
}

<ul>
    @foreach (Cuisine cuisine in Model)
    {
      <li>
            @Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId})
      </li>
    }
</ul>

@Html.ActionLink("Add cuisine", "Create")
@Html.ActionLink("Go Back to Home", "Index", "Home")


